{% comment %}<!--
agenda item list include is a listing helper.
Usage:
  {% assign group = 'board|meeting|agenda' | split '|' %}
  {% include page_list_by_group %}
-->{% endcomment %}{% capture page_list_sort %}{% for node in site.pages %}{% if node.group == group %}{% assign titlecase = node.title %}{% unless group contains 'policy' %}{% include titlecase %}{% endunless %}{% assign url = node.url %}{% include url_date %}{% if forloop.first == false %}|{% endif %}{{ url_date }}:{{ titlecase }}:{{ site.baseurl }}{{ node.url }}{% endif %}{% endfor %}{% endcapture %}{% capture page_list %}{% assign page_list = page_list_sort | strip_newlines | split: '|' | sort %}{% for item_elem in page_list offset:1 %}{% assign item_elem = item_elem | strip_newlines %}{% assign ie = item_elem | split: ':' %} * [{% if ie[0].size == 0 %}{{ ie[1] }}{% else %}{{ ie[0] }}{% endif %}]({{ ie[2] }})
{% endfor %}{% endcapture %}{{ page_list }}{% assign page_list = nil %}{% assign page_list_sort = nil %}{% assign url_date = nil %}